.UCenter-bg {
    background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1551946098031&di=a18d7c5a5118d390741c6a47be46dac0&imgtype=0&src=http%3A%2F%2Fhbimg.b0.upaiyun.com%2F9e62cd0a340fd03b90bfb6f277f773919107edd024a4d-T6wfoZ_fw658');
    background-size: cover;
    height: 550rpx;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
    opacity: 0.8;
}

.UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
}

.UCenter-bg .gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

map, .mapBox {
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

map, .mapBox {
    width: 750rpx;
    height: 300rpx;
}

.small-pic {
    width: 72rpx;
    height: 72rpx;
}
